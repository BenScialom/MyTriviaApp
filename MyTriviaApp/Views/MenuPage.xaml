<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyTriviaApp.Views.MenuPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MyTriviaApp.ViewModels"
    Title="Menu"
    x:DataType="vm:MenuPageViewModel">
    <VerticalStackLayout
        Margin="15"
        Spacing="25"
        VerticalOptions="CenterAndExpand">
        <Button
            BackgroundColor="CadetBlue"
            Command="{Binding GoToPage}"
            CommandParameter="BestScores"
            Text="Best Scores Page" />
        <Button
            BackgroundColor="CadetBlue"
            Command="{Binding GoToPage}"
            CommandParameter="ApproveQuestion"
            Text="Approve Questions Page" />
     
        <Button
            BackgroundColor="CadetBlue"
            Command="{Binding GoToPage}"
            CommandParameter="UserAdmin"
            Text="User Admin Page" />


    </VerticalStackLayout>
</ContentPage>